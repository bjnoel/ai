@{
    ViewData["Title"] = "File Upload";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 w-full">
    <div class="space-y-8 w-full max-w-2xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full">
            <h1 class="text-2xl font-bold mb-6 text-center">Upload a PDF File</h1>
            <form asp-controller="File" asp-action="ConvertAndDownload" enctype="multipart/form-data" method="post" class="space-y-4">
                <div class="flex flex-col items-center">
                    <label class="block text-gray-700 font-semibold mb-2">Select file:</label>
                    <div class="flex items-center">
                        <input type="file" name="file" accept="application/pdf" class="px-4 py-2 rounded-md border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-400 mx-auto">
                    </div>
                </div>
                <div class="flex justify-center">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md">Upload</button>
                </div>
            </form>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-lg w-full">
            <p class="text-gray-700 text-center">
                If you upload a digitally created PDF file (i.e., not one that's been scanned), our application will provide you with a copy of the PDF that looks scanned. This process can help give your document a more authentic, hand-scanned appearance while preserving the original content.
            </p>
        </div>
    </div>
</div>
